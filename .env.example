# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=taste_of_aloha

# Backend Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# Production Database URL (for migrations/deployments)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Optional: Email Service (for order notifications)
# SENDGRID_API_KEY=your_sendgrid_key
# EMAIL_FROM=noreply@tasteofalohafood.com

# Optional: SMS Service (for order notifications)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=+1234567890

# Optional: Payment Processing
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...

# Optional: File Storage
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=taste-of-aloha-images
# AWS_REGION=us-west-2
