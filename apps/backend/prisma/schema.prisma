// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

datasource db {
  provider = "postgresql"
}

// This generates the Prisma Client for querying
generator client {
  provider = "prisma-client-js"
}

// Define Client model (user)

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

// Define your menu model (menu items table)
model Menu {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String?
  category    String
  isAvailable Boolean @default(true)
  cartItems   CartItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

// Shopping cart models
model Cart {
  id         Int        @id @default(autoincrement())
  userId     Int?       // Null if guest/temporary cart
  items      CartItem[]
  total      Float      @default(0)
  itemCount  Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model CartItem {
  id        Int     @id @default(autoincrement())
  cartId    Int
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  menuId    Int
  menu      Menu    @relation(fields: [menuId], references: [id])
  quantity  Int     @default(1)
  price     Float   // Price at time of adding to cart
  subtotal  Float   // quantity * price
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, menuId]) // One item type per cart
}